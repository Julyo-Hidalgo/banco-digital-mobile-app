<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Banco_Digital.View.Correntista.formCadastro">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource  BackgroundStackLayout}" Spacing="50">
            <Label Style="{StaticResource alignLabel}" FontSize="25">Cadastro de correntista:</Label>

            <Entry Style="{StaticResource alignEntry}" Placeholder="Digite seu nome:" x:Name="txtNome" MaxLength="80"/>

            <Entry Style="{StaticResource alignEntry}" Placeholder="Digite seu CPF:" x:Name="txtCpf" Keyboard="Text" MaxLength="11"/>

            <DatePicker HorizontalOptions="CenterAndExpand" BackgroundColor="White" x:Name="dpDataNasc" Format="dd/MM/yyyy" />

            <Entry Style="{StaticResource alignEntry}" IsPassword="True" x:Name="txtSenha" Placeholder="Digite uma senha:"/>

            <Button Style="{StaticResource alignButton}" HorizontalOptions="Fill" Text="cadastrar" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>