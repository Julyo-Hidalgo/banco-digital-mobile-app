<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Banco_Digital.View.Correntista.formLogin">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource  Background}">
            <Label HorizontalOptions="Center" FontSize="Large">Login:</Label>

            <Label>CPF</Label>
            <Entry x:Name="txtCpf" Keyboard="Numeric" MaxLength="11" />

            <Label>Senha</Label>
            <Entry x:Name="txtSenha" IsPassword="True" />

            <Button Text="login" Clicked="Button_Clicked"/>

            <Button Text="Crie uma conta" x:Name="cadastro" Clicked="cadastro_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>