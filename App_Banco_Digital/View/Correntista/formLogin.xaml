<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Banco_Digital.View.Correntista.formLogin">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="20">
            <Label HorizontalOptions="Center" FontSize="Large">Cadastro de correntista:</Label>
            
            <Label>CPF</Label>
            <Entry x:Name="txtCpf" Keyboard="Text" MaxLength="11"/>

            <Label>Senha</Label>
            <Entry x:Name="txtSenha" />

            <Button Text="login" Clicked="Button_Clicked"/>

            <Button Text="Crie uma conta" x:Name="cadastro" Clicked="cadastro_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>