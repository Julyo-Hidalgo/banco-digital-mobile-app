<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Banco_Digital.View.Correntista.Area">
    <ContentPage.Content>
        <Grid Style="{StaticResource  Background}">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Label x:Name="NumConta" Text="Número da conta: " HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="0"/>
            <Label x:Name="Nome" Text="Saldo: " HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="1"/>
            <Button Text="Pix" Clicked="Button_Clicked" Grid.Row="2"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>