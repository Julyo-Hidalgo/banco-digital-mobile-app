<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Banco_Digital.View.ChavePix.formCadastroChavePix">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource BackgroundStackLayout}" Spacing="50">

            <Label Style="{StaticResource alignLabel}" Text="Cadastro de chave pix" FontSize="25"/>
            <Entry Style="{StaticResource alignEntry}" x:Name="txtChave" Keyboard="Numeric" MaxLength="11" Placeholder="Digite o seu CPF:"/>

            <Button Style="{StaticResource alignButton}" HorizontalOptions="Fill" x:Name="btn_salvar" Text="Salvar" Clicked="btn_salvar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>