<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Banco_Digital.View.ChavePix.formCadastroChavePix">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource Background}">

            <Label Text="Digite a chave pix: "/>
            <Entry x:Name="txtChave" Keyboard="Numeric" MaxLength="11"/>

            <Button x:Name="btn_salvar" Text="Salvar" Clicked="btn_salvar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>